{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "SFML Build (MSYS2)",
            "type": "shell",
            "command": "g++", 
            "args": [
                "-g",
                "${workspaceFolder}/main.cpp",
                "-o",
                "${workspaceFolder}/main.exe",

                "-mwindows",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system",
                "-lsfml-main"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}